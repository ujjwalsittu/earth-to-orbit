{
  "name": "earth-to-orbit",
  "version": "1.0.0",
  "description": "Earth To Orbit - B2B Aerospace Equipment Booking Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "api:dev": "pnpm --filter @e2o/api dev",
    "web:dev": "pnpm --filter @e2o/web dev",
    "api:build": "pnpm --filter @e2o/api build",
    "web:build": "pnpm --filter @e2o/web build",
    "seed": "tsx scripts/seed-data.ts",
    "docker:build": "docker-compose -f infra/docker/docker-compose.yml build",
    "docker:up": "docker-compose -f infra/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/docker/docker-compose.yml logs -f"
  },
  "devDependencies": {
    "turbo": "^1.11.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
