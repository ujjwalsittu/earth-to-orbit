{
  "name": "earth-to-orbit",
  "version": "1.0.0",
  "private": true,
  "description": "B2B Aerospace Platform for machinery and lab bookings",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "seed": "tsx scripts/seed-data.ts"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^1.12.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
